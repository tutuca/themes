update_interval 1
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1
imlib_cache_size 0
double_buffer yes
no_buffers yes
format_human_readable
use_xft yes
xftfont Existence:size=8
override_utf8_locale yes
text_buffer_size 2048
own_window_class Conky
own_window yes
own_window_type override
own_window_transparent yes
